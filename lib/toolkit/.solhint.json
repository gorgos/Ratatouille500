{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": [
      "0.6.6",
      "error",
      "0.8.7"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "reason-string": [
      "warn",
      {
        "maxLength": 80
      }
    ],
    "no-empty-blocks": "off",
    "check-send-result": "off"
  }
}